{
    "default_locale":   "en",

    "name":     "__MSG_extensionTitle__",
    "version":  "1.0",
    
    "description":      "__MSG_extensionDescription__",
    "icons":        {
        "16":   "icon-16x16.png",
        "19":   "icon-19x19.png",
        "48":   "icon-48x48.png",
        "128":  "icon-128x128.png"
    },

    "page_action":  {
        "default_icon":     "icon-19x19.png", 
        "default_title":    "__MSG_tooltip__"
    },
    "background_page":  "background.html",
    "content_scripts":  [
        {
            "matches":  [
                "http://*/*",
                "https://*/*"
            ],
            "js":   [
                "injected.js"
            ],
            "run_at":   "document_end"
        }
    ],
    "permissions":  [
        "tabs",
        "notifications",
        "https://www.instapaper.com/"
    ]
}
